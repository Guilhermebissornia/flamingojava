package tarefa05;

import java.util.Scanner;

public class Exercicio08 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Hora de inicio do jogo de xadrez");
		int horainicial = sc.nextInt();
		System.out.println("Hora do termino do jogo de xadrez");
		int horatermino = sc.nextInt();

		if (horainicial > horatermino) {

			int soma = 24 - horainicial + horatermino;

			System.out.println("Horas total de jogo:" + soma + "horas");
		} else {
			if (horatermino < horainicial) {

				int total = horatermino - horainicial - 24;
				System.out.println(" horario total de jogo " + total);

			} else {

				if (horatermino == horainicial) {

					int total = 24;

				}
			}
		}
		sc.close();
	}

}
