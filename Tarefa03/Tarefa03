		System.out.println("Digite o valor de a ");

		int a = sc.nextInt();

		

		System.out.println("digite o valor de b");

		int b =sc.nextInt();

		

		int recebendovalor= a+b;

		

		System.out.println("B = "+a+" A ="+b);



		



		sc.close();





	}

}
