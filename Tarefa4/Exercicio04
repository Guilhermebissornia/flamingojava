package tarefa04;

import java.util.Scanner;

public class Exercicio04 {

	public static void main(String[] args) {
		
Scanner sc = new Scanner(System.in);
		
		System.out.println("Qual o valor da cotação do dolar");
		float cotacao_dolar=sc.nextFloat();
		System.out.println("Qual a quantidade de dólares disponível");
		float valor_dolar=sc.nextFloat();
		float valor_real=cotacao_dolar*valor_dolar;
		
		System.out.println("o valor em reais é:"+valor_real);
		
		sc.close();

}

}
